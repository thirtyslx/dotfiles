#!/usr/bin/env sh
# Sends notification with current volume or mute state

msgTag="volumechange"
msgApp="volumechange"
vol="$(wpctl get-volume @DEFAULT_AUDIO_SINK@ | tr -d '.')"

notify() {
    echo "$1"
    notify-send ${2:+$2} -t 1000 -h "string:x-dunst-stack-tag:$msgTag" "vol: $1"
}

echo "$vol" | grep -q "MUTED" && notify "ðŸ”‡ muted" && exit 0

vol="${vol#Volume: }"
vol=$(printf "%.0f" "$vol")

case 1 in
    $((vol >= 70)) ) icon="ðŸ”Š" ;;
    $((vol >= 30)) ) icon="ðŸ”‰" ;;
    $((vol >= 1)) ) icon="ðŸ”ˆ" ;;
    * ) icon="ðŸ”‡" ;;
esac

notify "$icon$vol%" "-h int:value:$vol"
