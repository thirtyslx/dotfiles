#!/usr/bin/env sh
# Sends notification with current volume or mute state

msgTag="volumechange"
msgApp="volumechange"
vol="$(wpctl get-volume @DEFAULT_AUDIO_SINK@)"

echo "$vol" | grep "\[MUTED\]" && \
    notify-send -a "$msgApp" -t 1000 -h "string:x-dunst-stack-tag:$msgTag" "Volume: ðŸ”‡ muted" && exit 0

vol="$(echo "$vol" | cut -d' ' -f2 | cut -d. -f2)"
vol="${vol#0}"      # for ommitting `0` when value is lower than 10

if [ "$vol" -ge 70 ]; then
    icon="ðŸ”Š"
elif [ "$vol" -ge 30 ]; then
    icon="ðŸ”‰"
elif [ "$vol" -ge 1 ]; then
    icon="ðŸ”ˆ"
else
    icon="ðŸ”‡"
fi

notify-send -a "$msgApp" -t 1000 -h "string:x-dunst-stack-tag:$msgTag" -h "int:value:$vol" "Volume: $icon$vol%"
