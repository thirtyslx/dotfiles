# My sxhkd config. Not much to see here; just some pretty standard stuff.

# Restart sxhkd

super + Escape
    pkill -USR1 -x sxhkd && notify-send "sxhkd" "restarted"

# APPS

super + r; {n,t,f,d,c,p,g,i,o}
    {nitrogen,telegram-desktop,pcmanfm,discord,galculator,pycharm,gpick,flatpak run com.github.rajsolai.textsnatcher,obs}

super + d
    dmenu_run -fn 'JetBrainsMonoNerdFont-14'

super + y
    rofi -show window

super + shift +  e
    emacsclient -c -a 'emacs'

super + Return
    alacritty

super + w
    librewolf

super + shift + w
    librewolf --private-window

super + x
    xkill

Print
    flameshot gui

ctrl + Print
	flameshot full -p ~/Pictures/screenshots

super + g
    thunar

# Close all notifications

ctrl + space
    dunstctl close-all

# SYSTEM

super + 0; {shift+s,s,r,l,h}
    {shutdown now,systemctl suspend,reboot,xlck,systemctl hibernate}

super + s
    systemctl suspend

# AUDIO

F2
    amixer -D pulse sset Master 5%-; dunstctl close-all; showvolume

F3
    amixer -D pulse sset Master 5%+; dunstctl close-all; showvolume

F4
    amixer -D pulse sset Master toggle; dunstctl close-all; showvolume

# PLAYER

alt + F1
    playerctl play-pause

alt + F5
    playerctl pause

alt + F6
    playerctl previous

alt + F8
    playerctl next

# MOC

F1
    mocp --toggle-pause

ctrl + F5
    mocp --pause

ctrl + F6
    mocp --previous

F8
    mocp --next

# SCRATCHPADS

super + t
    tdrop -am -w 60% -h 60% -x 20% -y 20% -n term alacritty --class=scratchpad

super + m
    tdrop -am -w 60% -h 60% -x 20% -y 20% -n mus alacritty --class=scratchpad -e mocp

super + shift + m
    alacritty -e mocp

super + c
    tdrop -am -w 60% -h 60% -x 20% -y 20% -n fm alacritty --class=scratchpad -e ranger

super + shift + c
    alacritty -e ranger

# SCRIPTS

super + Insert
    xdotool type $(grep -v '^#' ~/.local/share/bookmarks | dmenu -l 50 -p 'Select bookmark:' -fn 'JetBrainsMonoNerdFont-14' | cut -d ' ' -f1)

super + shift + Insert
    xdotool type $(grep -v '^#' ~/.local/share/see-later-bookmarks | dmenu  -l 50 -p 'Select bookmark:' -fn 'JetBrainsMonoNerdFont-14' | cut -d ' ' -f1)

super + b
    bookmarkthis

super + e
    editconfig

########################################
###          BSPWM SPECIFIC          ###
########################################

# Toggle polybar
super + p
    togglepolybar bspwm

# close and kill
super + {_, shift + }q
	bspc node -{c}

# quit/restart bspwm
super + shift + {q,r}
        bspc {quit,wm -r}

# alternate between the tiled and monocle layout
super + m
	bspc desktop -l next

# send the newest marked node to the newest preselected node
super + y
	bspc node newest.marked.local -n newest.!automatic.local

# swap the current node and the biggest window
super + g
	bspc node -s biggest.window

# STATE/FLAGS

# set the window state
super + {t,shift + t,shift+space}
	bspc node -t {tiled,pseudo_tiled,floating}

super + space
    bspc node -t floating || bspc node -t tiled

# fullscreen
super + f
    bspfullscreen

# set the node flags
super + ctrl + {m,x,y,z}
	bspc node -g {marked,locked,sticky,private}

# FOCUS/SWAP

# focus the node in the given direction
super + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}

# focus the node for the given path jump
super + {p,b,comma,period}
	bspc node -f @{parent,brother,first,second}

# focus the next/previous window in the current desktop
super + {_,shift + }n
	bspc node -f {next,prev}.local.!hidden.window

# focus the next/previous desktop in the current monitor
super + bracket{left,right}
	bspc desktop -f {prev,next}.local

# focus the last node/desktop
super + {grave,Tab}
	bspc {node,desktop} -f last

# focus the older or newer node in the focus history
super + {o,i}
	bspc wm -h off; \
	bspc node {older,newer} -f; \
	bspc wm -h on

# focus or send to the given desktop
super + {_,shift + }{1-9}
	bspc {desktop -f,node -d} focused:'^{1-9}'

# PRESELECT

# preselect the direction
super + ctrl + {h,j,k,l}
	bspc node -p {west,south,north,east}

super + {z,v}
    bspc node -p {east,south}

super + shift + {z,v}
    bspc node -p {west,north}

# preselect the ratio
super + ctrl + {1-9}
	bspc node -o 0.{1-9}

# cancel the preselection for the focused node
super + ctrl + space
	bspc node -p cancel

# cancel the preselection for the focused desktop
super + ctrl + shift + space
	bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel

# MOVE/RESIZE

# expand a window by moving one of its side outward
super + alt + {h,j,k,l}
	bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

# contract a window by moving one of its side inward
super + alt + shift + {h,j,k,l}
	bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

# move a floating window
super + shift + {h,j,k,l}
	bspc node -v {-20 0,0 20,0 -20,20 0}

########################################
###      END OF BSPWM SPECIFIC       ###
########################################
